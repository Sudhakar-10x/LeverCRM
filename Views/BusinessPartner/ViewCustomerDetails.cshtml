                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.PaymentTerms, "Payment Terms", new { @class = "col-sm-3 control-label" })
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.PaymentTerms, new { @class = "form-control", @readonly = "readonly", @placeholder = "Payment Terms" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Pricelist, "Price List", new { @class = "col-sm-3 control-label" })
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.Pricelist, new { @class = "form-control", @readonly = "readonly", @placeholder = "Price List" })
                                            </div>
