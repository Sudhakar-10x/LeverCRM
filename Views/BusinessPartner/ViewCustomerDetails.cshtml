                            <li class="active"><a data-toggle="tab" href="#tab-general">General</a></li>
                            <li><a data-toggle="tab" href="#tab-contact">Contact Person</a></li>
                            <li><a data-toggle="tab" href="#tab-bill">Bill To Address</a></li>
                            <li><a data-toggle="tab" href="#tab-ship">Ship To Address</a></li>
                            <li><a data-toggle="tab" href="#tab-payment">Payment Terms</a></li>
                        </ul>

                        <div class="tab-content">
                            <!-- General Tab -->
