                                        @Html.TextBoxFor(m => m.CardCode, new { @class = "form-control", @readonly = "readonly", @placeholder = "Code" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CardName, new { @class = "col-sm-3 control-label" })
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.CardName, new { @class = "form-control", @readonly = "readonly", @placeholder = "Name" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Row 2 -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CardType, new { @class = "col-sm-3 control-label" })
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.CardType, new { @class = "form-control", @readonly = "readonly", @placeholder = "Type" })
