                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Row 3 -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CardFName, new { @class = "col-sm-3 control-label" })
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => m.CardFName, new { @class = "form-control", @readonly = "readonly", @placeholder = "Reference Name" })
                                    </div>
                                </div>
                            </div>

