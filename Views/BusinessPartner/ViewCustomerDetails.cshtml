@using _10xErp.Models
@model _10xErp.Models.CustomerModal
@{
    ViewBag.Title = "ViewCustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Business Partner Master</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Index", "BusinessPartner")" class="btn btn-white btn-sm">Back to List</a>
                    </div>
                </div>
                <div class="ibox-content">
