<div id="itemContainer" class="col-md-12">
    <h4>Item Details</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Item Name</th>
                @*<th>UOM</th>*@
                <th>Qty</th>
                @*<th>Unit Price</th>
                <th>Discount (%)</th>
                <th>Vat Group</th>
                <th>Warehouse</th>*@
                <th>FOC</th>
                <th>FOC Remarks</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td><input type="hidden" name="Items[@i].ItemCode" value="@Model.Items[i].ItemCode" readonly="readonly" style="background-color: white; color: black; border: 1px solid #ccc;"/>@Model.Items[i].ItemCode</td>
