                    @*<td readonly="readonly">@Model.Items[i].UOM</td>*@
                    <td><input type="hidden" name="Items[@i].Qty" value="@Model.Items[i].Qty" readonly="readonly" style="background-color: white; color: black; border: 1px solid #ccc;" />@Model.Items[i].Qty</td>
                    @*<td><input type="number" name="Items[@i].UnitPrice" value="@Model.Items[i].UnitPrice" readonly="readonly" class="form-control" /></td>
                    <td><input type="number" name="Items[@i].Discount" value="@Model.Items[i].Discount" readonly="readonly" class="form-control" /></td>
                    <td><input name="Items[@i].Vat" value="@Model.Items[i].Vat" readonly="readonly" class="form-control" /></td>
                    <td><input name="Items[@i].Warehouse" value="@Model.Items[i].Warehouse" readonly="readonly" class="form-control" /></td>*@
                    <td><input type="hidden" name="Items[@i].FOC" value="@Model.Items[i].FOC" readonly="readonly" style="background-color: white; color: black; border: 1px solid #ccc;" />@Model.Items[i].FOC</td>
