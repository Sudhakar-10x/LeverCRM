
@model List<_10xErp.Models.ItemDetails>
@{
    Layout = null;
}
<style>

    /* Freeze the header row */
    .table thead th {
        position: sticky;
        top: 0;
        z-index: 2; /* keep it above body cells */
        background: #f8f9fa; /* same color as header row */
    }

    .table-responsive-scroll {
        overflow-x: auto;
        overflow-y: auto;
        max-height: 400px;
        width: 100%;
    }

    .table {
        width: 100%;
        min-width: 540px;
        /*min-width: 1300px;*/
        border-collapse: collapse;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        color: #fff;
        border: 1px solid #0d6efd;
        padding: 0.375rem 0.75rem;
        font-size: 1.5rem;
        border-radius: 0.375rem;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #0b5ed7;
        }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border: 1px solid #dee2e6;
            text-align: center;
        }

    .table-light {
        background-color: #f8f9fa;
    }

    .text-danger {
        color: red;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-end {
        justify-content: flex-end;
    }

    .mb-2 {
        margin-bottom: 0.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .align-middle {
        vertical-align: middle;
    }

    .item-dropdown {
        width: 100% !important;
        min-width: 300px;
    }
</style>

<div class="d-flex justify-content-end mb-2">
    <button type="button" id="addRow" class="btn btn-primary add-row" title="Alt+A to Add Row" style="background-color: #e91e63; border-color: #e91e63; ">
        <i class="fa fa-plus" aria-hidden="true"></i> Add Row (Alt+A)
    </button>
</div>

<div class="table-responsive table-responsive-scroll mb-3">
    <table class="table table-bordered text-center align-middle" id="tbladdress">

        <thead class="table-light">
            <tr>
                <th hidden>LineNum<span class="text-danger"></span></th>
                <th hidden>Changed<span class="text-danger"></span></th>
                <th>Type<span class="text-danger">*</span></th>
                @*<th>Text<span class="text-danger"></span></th>*@
                <th>Item Name<span class="text-danger">*</span></th>
                <th>Item Code<span class="text-danger">*</span></th>
                <th style="width: 4%;">Qty<span class="text-danger">*</span></th>
                <th>Price<span class="text-danger">*</span></th>
                <th>Discount %<span class="text-danger">*</span></th>
                <th>Vat Group<span class="text-danger">*</span></th>
                <th>Vat<span class="text-danger">*</span></th>
                <th hidden>Vat Rate<span class="text-danger">*</span></th>
                <th>Total<span class="text-danger">*</span></th>
                <th>Gross Price after Discount<span class="text-danger">*</span></th>
                <th>Uom<span class="text-danger">*</span></th>
                <th>Warehouse<span class="text-danger">*</span></th>
                <th>Free Text<span class="text-danger">*</span></th>
                <th>Remarks<span class="text-danger">*</span></th>
                <th>Action<span class="text-danger">*</span></th>
            </tr>
        </thead>

        <tbody>
            @{int i = 0;
                foreach (var address in Model)
                {
                    if (address != null)
                    {
                        address.Index = i;
                        @Html.Action("_ItemRow", "SalesQuotation", address);
                        i++;
                    }
                }
            }
        </tbody>

    </table>
</div>




