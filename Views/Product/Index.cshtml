@using _10xErp.Models
@model List<ProductDetailsModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*  #itemTable_filter {
        display: none;
    }*/
</style>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Item List</h5>
                    <div class="ibox-tools">
                        <input type="text" id="customSearchBox" class="form-control input-sm" placeholder="Search records" style="width: 200px; display: inline-block;" />
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="itemTable" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ItemCode</th>
                                    <th>ItemName</th>
                                    <th>Barcode</th>
                                    <th>ItemGroup</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td>@item.ItemCode</td>
                                    <td>@item.ItemName</td>
                                    <td>@item.Barcode</td>
                                    <td>@item.ItemGroup</td>
                                    <td>
                                        @Html.ActionLink("View", "ViewProductDetails", "Product", new { itemCode = item.ItemCode }, new { @class = "btn btn-primary" })
                                    </td>
                                </tr>
                                    }
                                }
                                else
                                {

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

