@using _10xErp.Models
@model _10xErp.Models.ProductDetailsModel
@{
    ViewBag.Title = "ViewProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Item Master</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-white btn-sm">Back to List</a>
                    </div>
                  
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Item Code</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.ItemCode" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Description</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.ItemName" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Generic Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.FrgnName" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Item Type</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.ItemType" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Item Group</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.ItemGroup" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">UoM Group</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.Uomgrp" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Price List</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Barcode</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.Barcode" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Unit Price</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Model.Price" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Pricing Unit</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>

                    <hr />

                    <!-- Tabs -->
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#tab-general">General</a></li>
                        <li><a data-toggle="tab" href="#tab-purchasing">Purchasing Data</a></li>
                        <li><a data-toggle="tab" href="#tab-sales">Sales Data</a></li>
                        <li><a data-toggle="tab" href="#tab-inventory">Inventory Data</a></li>
                        <li><a data-toggle="tab" href="#tab-other">Other Details</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="tab-general" class="tab-pane active">
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Manufacturer</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.Manufacturer" readonly />
                                        </div>

                                        <label class="col-sm-2 control-label">Shipping Type</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.ShippingType" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Manage Item By</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.ManagedBy" readonly />
                                        </div>

                                        <label class="col-sm-2 control-label">Management Method</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.ManagementMethod" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Issue Primarily By</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.IssueprimalyBy" readonly />
                                        </div>

                                        <label class="col-sm-2 control-label">Item Status</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.Itemstatus" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="tab-purchasing" class="tab-pane">
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Preferred Vendor</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.Prefvendor" readonly />
                                        </div>

                                        <label class="col-sm-2 control-label">Tax Group</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.PurVatGroup" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="tab-sales" class="tab-pane">
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Tax Group</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.SalVatGroup" readonly />
                                        </div>

                                        <label class="col-sm-2 control-label">Sales UoM Code</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.SaleUomcode" readonly />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Sales UoM Name</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.UomName" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="tab-inventory" class="tab-pane">
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Inventory UoM Code</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.InvUomcode" readonly />
                                        </div>

                                        <label class="col-sm-2 control-label">Inventory UoM Name</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" value="@Model.InvUomcode" readonly />
                                        </div>
                                    </div>

                                    <hr />

                                    <h4>Warehouse Inventory</h4>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>WhsCode</th>
                                                    <th>WhsName</th>
                                                    <th>InStock</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var whs in Model.lstInvDetails)
                                                {
                                                    <tr>
                                                        <td>@(whs.WhsCode ?? "--")</td>
                                                        <td>@(whs.WhsName ?? "--")</td>
                                                        <td>@(whs.InStock?.ToString("N2") ?? "--")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <div id="tab-other" class="tab-pane">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="card">
                                            <div class="content">
                                                <form>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>MOH Registration code</label>
                                                                @*<input type="text" [(ngModel)]="@Model.MOHRegCode"
                                                                       class="form-control" placeholder="MOHRegCode" name="MOHRegCode" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.MOHRegCode" readonly />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>MOH Registration Expiry</label>
                                                                @*<input type="text" [(ngModel)]="productObj.MOHRegExp"
                                                                       class="form-control" placeholder="MOHRegExp" name="MOHRegExp" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.MOHRegExp" readonly />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Shelf life</label>
                                                                @*<input type="text" [(ngModel)]="productObj.ShelfLife"
                                                                       class="form-control" placeholder="ShelfLife" name="ShelfLife" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.ShelfLife" readonly />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Shelf life Mode</label>
                                                                @*<input type="text" [(ngModel)]="productObj.ShelfLifeMode"
                                                                       class="form-control" placeholder="ShelfLifeMode" name="ShelfLifeMode" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.ShelfLifeMode" readonly />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Supplier</label>
                                                                @*<input type="text" [(ngModel)]="productObj.Supplier"
                                                                         class="form-control" placeholder="Supplier" name="Supplier" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.Supplier" readonly />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Principal Company</label>
                                                                @*<input type="text" [(ngModel)]="productObj.Prency"
                                                                       class="form-control" placeholder="Prency" name="Prency" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.Prency" readonly />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Agency</label>
                                                                @*<input type="text" [(ngModel)]="productObj.Agency"
                                                                       class="form-control" placeholder="Agency" name="Agency" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.Agency" readonly />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Delivery System</label>
                                                                @*<input type="text" [(ngModel)]="productObj.DelSys"
                                                                       class="form-control" placeholder="DelSys" name="DelSys" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.DelSys" readonly />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>COO</label>
                                                                @*<input type="text" [(ngModel)]="productObj.COO"
                                                                       class="form-control" placeholder="COO" name="COO" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.COO" readonly />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Sales Rep Name</label>
                                                                @*<input type="text" [(ngModel)]="productObj.SalesRepName"
                                                                        class="form-control" placeholder="SalesRepName" name="SalesRepName" readonly>*@
                                                                <input type="text" class="form-control" value="@Model.SalesRepName" readonly />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Disc %</label>
                                                                <input type="text" [(ngModel)]="productObj.Disc"
                                                                       class="form-control" placeholder="Disc" name="Disc" readonly>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div> <!-- content -->
                                        </div> <!-- card -->
                                    </div> <!-- col-md-8 -->
                                </div> <!-- row -->
                            </div> <!-- container-fluid -->
                        </div> <!-- tab-pane -->


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


