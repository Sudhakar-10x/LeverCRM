<div class="d-flex justify-content-end mb-2">
    <button type="button" id="addRow" class="btn btn-primary add-row" title="Alt+A to Add Row">
        <i class="fa fa-plus" aria-hidden="true"></i> Add Row (Alt+A)
    </button>
</div>

<div class="table-responsive table-responsive-scroll mb-3">
    <table class="table table-bordered text-center align-middle" id="tbladdress">

        <thead class="table-light">
            <tr>
                <th style="width: 40%;">Barcode<span class="text-danger">*</span></th>
                @*<th style="width: 40%;">Item Name<span class="text-danger">*</span></th>*@
                <th>Item Code<span class="text-danger">*</span></th>
                <th>Item Name<span class="text-danger">*</span></th>
                <th>Uom<span class="text-danger">*</span></th>
                <th>Batches<span class="text-danger">*</span></th>
                <th>ExpiryDate<span class="text-danger">*</span></th>
                <th>BatchQty<span class="text-danger">*</span></th>
                <th>Qty<span class="text-danger">*</span></th>
                <th>FOC<span class="text-danger">*</span></th>
                <th>FOC Remarks<span class="text-danger">*</span></th>
                <th>Unit Price<span class="text-danger">*</span></th>
                <th>Discount %<span class="text-danger">*</span></th>
                <th>Vat Group<span class="text-danger">*</span></th>
                <th>Vat<span class="text-danger">*</span></th>
                <th hidden>Vat Rate<span class="text-danger">*</span></th>
                <th>Total<span class="text-danger">*</span></th>
                <th>Warehouse<span class="text-danger">*</span></th>
                <th>Instock(Whs)<span class="text-danger">*</span></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @{int i = 0;
                foreach (var address in Model)
                {
                    if (address != null)
                    {
                        address.Index = i;
                        @Html.Action("_ItemRow", "Invoice", address);
                        i++;
                    }
                }
            }
        </tbody>

    </table>
</div>


