@model _10xErp.Models.SalesOrderViewModel
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Sales Order Details</h5>
                </div>
                <div class="ibox-content">
                    <div class="ibox-title">
                        <h5>Sales Order List</h5>
                        <div class="text-right m-b-2" style="position: absolute; right: 30px; top: 15px;">
                            <a href="@Url.Action("Index", "SalesOrder")" class="btn btn-primary">
                                <i class="fa fa-backward"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Customer</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.CardName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Customer Code</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.CardCode, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Contact Person</label>
                                <div class="col-sm-9">
                                    @Html.TextBox("contactPerson", Model.contactPerson, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">LPO No</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.RefNo, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Payment Terms</label>
                                <div class="col-sm-9">
                                    @Html.TextBox("Paymentterms", Model.Paymentterms, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Ship To Code</label>
                                <div class="col-sm-9">
                                    @Html.TextBox("Shiptocode", Model.Shiptocode, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Series</label>
                                <div class="col-sm-4">
                                    @Html.TextBox("series", Model.seriesName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                                <div class="col-sm-5">
                                    @Html.TextBox("DocNum", Model.DocNum, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Posting Date</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.postingdate, "{0:yyyy-MM-dd}", new { @class = "form-control", @readonly = "readonly", type = "date" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Delivery Date</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.ReqDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @readonly = "readonly", type = "date" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">LPO Date</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.LPODate, "{0:yyyy-MM-dd}", new { @class = "form-control", @readonly = "readonly", type = "date" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Delivery Location</label>
                                <div class="col-sm-9">
                                    @Html.TextBox("deliveryLocation", Model.deliveryLocation, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Bill To Code</label>
                                <div class="col-sm-9">
                                    @Html.TextBox("Billtocode", Model.Billtocode, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="table-responsive">
                        <table class="table table-bordered text-center align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Item Name</th>
                                    <th>Item Code</th>
                                    <th>UOM</th>
                                    <th>Qty</th>
                                    <th>FOC</th>
                                    <th>FOC Remarks</th>
                                    <th>Unit Price</th>
                                    <th>Discount %</th>
                                    <th>Vat Group</th>
                                    @*<th>Vat</th>*@
                                    <th hidden>Vat Rate</th>
                                    <th>Total</th>
                                    <th>Warehouse</th>
                                    <th>Instock(Whs)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ItemDetailsListView)
                                {
                                    <tr>
                                        <td>@item.ItemName</td>
                                        <td>@item.ItemCode</td>
                                        <td>@item.UomName</td>
                                        <td>@item.Qty</td>
                                        <td>@item.foc</td>
                                        <td>@item.focremarks</td>
                                        <td>@item.Price</td>
                                        <td>@item.DisPer</td>
                                        <td>@item.VatGrpCode</td>
                                        @*<td>@item.VAT</td>*@
                                        <td>@item.LineTotal</td>
                                        <td>@item.Warehouse</td>
                                        <td>@item.WhInstockQty</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Sales Employee</label>
                                <div class="col-sm-9">
                                    @Html.TextBox("Salesemp", Model.Salesemp, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Remarks</label>
                                <div class="col-sm-9">
                                    @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control", @readonly = "readonly", rows = 2 })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Total Before Discount</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.TotalBeforeDiscount, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Total Discount</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.DocDiscount, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Tax</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.TotalTax, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Total</label>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.GrossTotal, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div> <!-- ibox-content -->
            </div> <!-- ibox -->
        </div> <!-- col -->
    </div> <!-- row -->
</div> <!-- wrapper -->
