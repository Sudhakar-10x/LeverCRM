@model _10xErp.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - 10xPOS</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <style>
        body.gray-bg {
            background: #f5f7fa;
        }

        .login-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 12px;
            padding: 30px 25px;
            max-width: 400px;
            margin: 50px auto;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.08);
            transition: all .3s ease-in-out;
        }

            .login-card:hover {
                box-shadow: 0px 6px 18px rgba(0,0,0,0.12);
            }

            .login-card h3 {
                font-weight: 600;
                margin-bottom: 15px;
                color: #333;
            }

            .login-card p {
                color: #666;
                font-size: 14px;
            }

        .form-control {
            border-radius: 8px;
            padding: 10px 12px;
        }

        .btn-custom {
            background-color: #e91e63;
            border-color: #e91e63;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-custom:hover {
                background-color: #c2185b;
                border-color: #c2185b;
            }

        .logo {
            margin-bottom: 15px;
        }
    </style>
</head>
<body class="gray-bg">

    <div class="middle-box text-center animated fadeInDown">
        <div class="login-card">
            <div class="logo">
                <img src="~/Content/Altamam.jpg" style="width: 130px;" alt="Logo" />
            </div>

            <h3>Welcome to Sales Portal</h3>
            <p>Login to see it in action.</p>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }


            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "m-t", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b" style="background-color: #e91e63; border-color: #e91e63; ">Login</button>

                <p class="text-muted text-center mt-3 mb-0">
                    <small><a href="#">Forgot your password?</a></small>
                </p>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>


